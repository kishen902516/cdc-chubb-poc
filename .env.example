# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cdcdb
DB_USERNAME=cdcuser
DB_PASSWORD=cdcpassword

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# CDC Configuration
CDC_CONFIG_PATH=config/cdc-config.yml
CDC_OFFSET_PATH=data/offsets/cdc-offsets.dat

# Security (Development)
SECURITY_USERNAME=admin
SECURITY_PASSWORD=admin

# Security (Production)
JWT_SECRET=change-this-to-a-secure-random-secret-key
JWT_ISSUER=cdc-application
JWT_EXPIRATION=3600

# SSL (Production)
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/config/ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=

# Logging
LOG_LEVEL=INFO
